<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/cuadroUno"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="97dp"
            android:layout_height="92dp"
            app:srcCompat="@drawable/photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pedro Jurado" />

            <TextView
                android:id="@+id/txtTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111111111" />

            <TextView
                android:id="@+id/txtGmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pjurado@gmail.com" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cuadroDos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="98dp"
            android:layout_height="104dp"
            app:srcCompat="@drawable/photo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNombre2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pepe Pérez" />

            <TextView
                android:id="@+id/txtTelefono2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="222222222" />

            <TextView
                android:id="@+id/txtGmail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ppe@gmail.com" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cuadroTres"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="199dp"
            android:layout_height="104dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNombre3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Antonio Gómez" />

            <TextView
                android:id="@+id/txtTelefono3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="333333333" />

            <TextView
                android:id="@+id/txtGmail3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="anto@gmail.com" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>